<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.home.event_list.EventSearchController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="%searchEvent.eventName" />
            <JFXTextField fx:id="txtEventName" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="%searchEvent.eventsBetween" />
            <JFXDatePicker fx:id="dateCreateDate1" defaultColor="#018f00" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="120.0" />
            <Label text="%searchEvent.and" />
            <JFXDatePicker fx:id="dateCreateDate2" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="120.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="%searchEvent.eventStatus" />
            <JFXComboBox fx:id="cbxEventStatus" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="150.0" />
         </children>
      </HBox>
      <JFXButton fx:id="btnSearch" onAction="#searchEvent" styleClass="btnEvent" text="%btnSearch" />
   </children>
</HBox>
